extends common/layout

block head

    link(rel='stylesheet', href='/stylesheets/reports.css')
    link(rel='stylesheet', href='../javascripts/libs/DataTables-1.12.1/datatables.min.css')
    
    script(src='../javascripts/libs/DataTables-1.12.1/datatables.min.js')
    script(src='../javascripts/libs/Chart.bundle.min.js')
    script(src='../javascripts/reports.js')

    script.
        config = !{JSON.stringify(config)};

block body

    body.surface-level-2 

        #header
            #header-logo
            #header-title= title
            #header-toolbar
                #add.button Select Reports
                #header-avatar

        #reports.dashboard
        
        .dialog
            .dialog-header Select reports to display in dashboard
            .dialog-content.tiles.wide.s#list 
            .dialog-footer
                .button.clear Deselect All
                .button.default#submit Apply 
                .button.cancel Cancel