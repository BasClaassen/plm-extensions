extends common/layout

block head
    link(rel='stylesheet', href='/stylesheets/training.css')
    script(src='/javascripts/training.js')
    script.
        config = !{JSON.stringify(config)};

block content

    body

        #header.dark
            #header-logo
            #header-title= title
            #header-subtitle
            #header-toolbar
                #button-toggle.button.with-icon.icon-pdf(title='Toggle attachments on/offs') Toggle Attachments 
                #button-settings.button.with-icon.icon-settings(title='Click to open settings') Settings 
                #header-avatar
        
        #main.screen

            .viewer#viewer     

            .panel#details
                .panel-header   
                    .panel-title Details 
                    .panel-toolbar 
                        .button.icon.icon-bookmark#bookmark
                        .button.icon.icon-open#open
                .panel-content#details-sections
            
            .panel#attachments
                .panel-header
                    .panel-title Attachments
                .panel-content.tiles.list.s#attachments-list