extends ../framework/layout

block head

    link(rel='stylesheet', href='/stylesheets/dev/browser.css')
    //- link(rel='stylesheet', href='/stylesheets/custom/browser.css')
    script(src='https://cdn.jsdelivr.net/npm/chart.js')
    script(src='/javascripts/dev/browser.js')
    //- script(src='/javascripts/custom/browser.js')
    script.
        config = !{JSON.stringify(config)};

block body

    body.surface-level-1.no-new

        #header.dark
            #header-logo
            #header-title
            #header-toolbar
                .button#toggle-panel.with-icon.icon-toggle-on Recents &amp; Pinned
                .button#button-new.default.with-icon.icon-create Create New
                #header-search-icon.icon.xs search
                input#header-search
                #header-avatar

        #profiles.screen 
            .screen-content
                .screen-title Select Profile
                .screen-message Please select a configuration profile from the list below to open the matching dashboard
                .screen-list

        #main.screen

            #search.surface-level-1 

                #filters.panel 
                    .panel-header
                        .panel-title Filters
                        .panel-toolbar
                            .button.default#filters-submit Submit
                    .panel-content#filters-list
                
                #restore.surface-level-3
                    div 
                        div Restore Filter: 
                        div 
                            select.button#select-filter(name="sss") 
                                option Filter 1
                                option Filter 2
                    div
                        div Save Filter: 
                        div#restore-save
                            input(type="text")
                            .button#save-new-filter Save

                #results

            #recents.surface-level-2

            #bookmarks.surface-level-2

        #item.screen.item.surface-level-2