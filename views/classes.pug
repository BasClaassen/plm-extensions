extends common/layout

block head

    link(rel='stylesheet', href='/stylesheets/classes.css')
    script(src='/javascripts/classes.js')
    script.
        config = !{JSON.stringify(config)};

block body

    body.surface-level-1.no-panel
        
        #header.dark
            #header-logo
            #header-title= title
            #header-subtitle
            #header-toolbar
                #header-avatar
        
        #main.screen

            #items.panel.with-toggles.with-toolbar
                .panel-header#items-header
                    .panel-title#items-title
                .panel-content#items-content
                    table#items-list(cellspacing='0')
                    .panel-footer 
                .panel-footer#items-toggles
                    .panel-toggles
                        .nowrap#show-all.selected Show All
                        .nowrap#hide-non-matching Hide Non Matching
                        .nowrap#show-matches-only Show Exact Matches Only

            #item.panel.with-subtitle
                .panel-header#item-header
                    .panel-subtitle#item-subtitle
                    .panel-title#item-title
                    .panel-toolbar#item-toolbar
                        .button.icon.icon-bookmark#bookmark
                        .button.icon.icon-open#open
                        .button.icon.icon-close#close
                #viewer 
                #tabs.panel-toggles 
                    div Details 
                    div Files
                
                .panel-content.surface-level-2.compact#item-sections

                .panel-content#attachments
                    #attachments-list.tiles.list.files