extends ../framework/layout

block head
    
    link(rel='stylesheet', href='/stylesheets/apps/variants.css')
    link(rel='stylesheet', href='/stylesheets/custom/variants.css')
    script(src='/javascripts/apps/variants.js')
    script(src='/javascripts/custom/variants.js')
    script.
        config = !{JSON.stringify(config)};
        
block body 

    body.surface-level-1
    
        #header.dark
            #header-logo
            #header-title=title
            #header-subtitle
            #header-toolbar
                .button#button-toggle-viewer.with-icon.icon-viewer(title='Click to toggle size of the viewer') Toggle Viewer
                .button#button-toggle-details.with-icon.icon-panel.filled(title='Click to toggle item details panel on/off') Toggle Details
                #header-avatar
        
        #main.screen.wide-viewer.with-details

            #viewer
            
            #bom.compact

            .panel.surface-level-2#item-variants 
                .panel-header 
                    .panel-title#item-variants-header Item Variants
                    .panel-toolbar 
                        .button.icon.icon-close#item-variants-close
                .panel-content#item-variants-text Select from the variants of
                .panel-content#item-variants-title
                .panel-content#item-variants-list-parent
                    #item-variants-list.list.tiles.m

            .panel.surface-level-2#details
                .panel-header 
                    .panel-title Details
                    .panel-toolbar 
                        .button.icon.icon-bookmark#bookmark
                        .button.icon.icon-open#open
                .panel-content.surface-level-2.compact#details-sections

            .panel.surface-level-1#create

        #dialog-saving.dialog
            .dialog-header Saving Changes
            .dialog-content
                #step1.step 
                    .step-label Creating new item variants
                    .step-progress
                        #step-bar1.step-bar
                    #step-counter1.step-counter 
                #step2.step 
                    .step-label Updating existing item variants 
                    .step-progress
                        #step-bar2.step-bar
                    #step-counter2.step-counter 
                #step3.step 
                    .step-label Deleting BOM entries
                    .step-progress
                        #step-bar3.step-bar
                    #step-counter3.step-counter 
                #step4.step 
                    .step-label Adding BOM entries
                    .step-progress
                        #step-bar4.step-bar
                    #step-counter4.step-counter 
                #step5.step 
                    .step-label Updating existing BOM entries
                    .step-progress
                        #step-bar5.step-bar
                    #step-counter5.step-counter 
            .dialog-footer
                #confirm-saving.button.disabled Close     