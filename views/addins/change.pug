extends ../framework/addins

block head

    link(rel='stylesheet', href='/stylesheets/addins/change.css')
    script.
        config = !{JSON.stringify(config)};
    script(src='/javascripts/addins/change.js')

block body

    body.embedded

        #header.dark
            #header-logo
            #header-title= title
            #header-toolbar
                #header-avatar

        .screen.surface-level-2#tasks  
            
            //- .panel#tasks

        .screen#task.surface-level-2.with-subtitle
            .panel-header   
                .panel-title#task-title
                .panel-subtitle#task-status 
                .panel-toolbar 
                    select.button#workflow-actions(label='Workflow-Aktionen')
                    .button.icon.icon-bookmark#bookmark
                    .button.icon.icon-open#open
                    .button.icon.icon-close#close-task
            
            .tabs(data-tab-group="tab-group-main")
                .tab#tab-details Details 
                .tab#tab-items Artikel
                .tab#tab-files Dateien
                .tab#tab-history Historie

            .panel-back.surface-level-1

            .panel-content.tab-group-main.surface-level-1#task-sections.compact
            .panel-content.tab-group-main.surface-level-1
                .panel-header   
                    .panel-title#task-title
                    .panel-toolbar 
                        .button.with-icon.icon-link.default#add-affected-item Aktives Dokument hinzufügen
                .panel-content#managed-items-list.tiles.list.xxxs
            .panel-content.tab-group-main.surface-level-1#attachments-list.attachments.list.tiles.xxxs
            .panel-content.tab-group-main.surface-level-1#history-events

        .dialog#add.surface-level-1    
            .dialog-header.surface-level-2 Artikel hinzufügen
            .dialog-content#add-content
                p Der folgende Artikel wird der Änderungsaufgabe hinzufgefügt: 
                #add-root.tiles.list.xxxs.surface-level-1
                    //- span#add-title 
                p Wählen Sie aus der nachfolgenden Liste weitere Artikel, die geändert wurden oder noch freizugeben sind und auch an die Änderungsaufgabe angehängt werden sollen:
                #add-list.tiles.list.xxxs
            .dialog-footer
                #add-confirm.button.default Bestätigen
                #add-cancel.button Abbruch
                #add-deselect.button Alle abwählen
                #add-select.button Alle auswählen     
